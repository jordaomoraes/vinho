generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lote {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  endMaquina         String?
  modoOperacao       Int?
  docReferencia      String
  operador           String?    @default("Sem Informações")
  pesoLoteProgramado Float
  dataHoraInicioLote DateTime?
  dataHoraFinalLote  DateTime?
  pesoLote           Float?
  pesoSaco           Float?
  qtdSaco            Int?
  idPlc              Int?
  consumed           Boolean?   @default(false)
  status             String     @default("Aguardando Processamento")
  dataCadastro       DateTime   @default(now())
  Batelada           Batelada[]

  @@map("lotes")
}

model Batelada {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  lote         Lote     @relation(fields: [idLote], references: [id])
  idLote       String
  dataBatelada DateTime
  idPlc        Int
  pesoBatelada Float

  @@map("bateladas")
}

model LoteAtual {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  idLote            String?
  pesoLote          Float?
  pesoAtual         Float?
  producaoHoje      Float?
  producaoTotal     Float?
  modoOperacao      Int
  statusEquipamento String @default("Parado")
  docReferencia     String @default(" -- ")

  @@map("loteAtual")
}

model User {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  username          String  @unique
  email             String  @unique
  password          String
  dataCadastro      DateTime @default(now())

  @@map("user")
}
